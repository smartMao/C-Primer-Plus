void copy_point(double *source, double *tag1, int len)
{
	for (int i = 0; i < len; i++) {
		*tag1++ = *source++;
	}
}

void copy_array(double *source, double tag2[], int len)
{
	for (int i = 0; i < len; i++) {
		tag2[i] = source[i];
	}
}
