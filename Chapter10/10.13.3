#include <stdio.h>
#include <string.h>

void swap(int *, int *);
void bubble(int array[], int len);

main()
{
	int arr[10] = {51, 91, 105, 36, 74, 91, 15,14, 1, 96};
	int len = sizeof(arr) / sizeof(int);

	printf("排序前");
	for (int k = 0; k < len; k++) {
		printf(" %d ",arr[k]);
	}

	printf("\n");
	bubble(arr, len);
	printf("排序后");

	for (int b = 0; b < len; b++) {
		printf(" %d ", arr[b]);
	}

	printf("\n");
	printf("数组中最大的值是： %d \n", arr[len-1]);
}

/* 冒泡排序 */
void bubble(int arr[] ,int len )
{
	for (int y = 0; y < len - 1; y++) {
		for (int i = 0; i < len - 1; i++) {
			if (arr[i] > arr[i+1]) {
				swap(&arr[i], &arr[i+1]); // 交换数组前后两个值
			}
		}
	}
}

/* 接受两个地址值， 分别交换地址值当中的值 */
void swap(int *a, int *b)
{
	int tmp = *b;
	*b = *a;
	*a = tmp;
}
